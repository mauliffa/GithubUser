<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/photo_ff"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bener_logo" />

    <TextView
        android:id="@+id/username_ff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/username"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/photo_ff"
        app:layout_constraintBottom_toBottomOf="@id/photo_ff"
        app:layout_constraintStart_toEndOf="@id/photo_ff" />

</androidx.constraintlayout.widget.ConstraintLayout>